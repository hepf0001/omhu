---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
    h3_h1: "text-[1.938rem] md:text-[3.812rem]",
    h5: "text-[1.000rem] md:text-[1.562rem]",
    h2_h1: "text-[2.438rem] md:text-[3.812rem]",
    h4_h3: "text-[1.250rem] md:text-[2.438rem]",
    h5_h4: "text-[1.000rem] md:text-[1.938rem]",
    h4_h2: "text-[1.250rem] md:text-[3.062rem]",
    h3: "text-[1.938rem] md:text-[2.438rem]",
    h6: "text-[0.875rem] md:text-[1.000rem]",
    p: "text-[0.875rem] md:text-[1.000rem]",
    ps: "text-[0.625rem] md:text-[0.812rem]",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}><slot /></Htmlheading>
