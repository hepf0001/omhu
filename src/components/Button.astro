---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "px-[20px] py-[12px] font-semibold transition transform hover:-translate-y-1";

const variantClasses = {
    primary: "border-1 border-blue-700 hover:border-blue-900 bg-blue-700 hover:bg-blue-900 text-neutral-50",
    secondary: "border-1 border-neutral-1000 hover:bg-neutral-1000 text-neutral-1000 hover:text-neutral-50",
    tertiary: "border-1 border-neutral-50 hover:bg-neutral-50 text-neutral-50 hover:text-neutral-1000",
    quaternary: "bg-blue-700 hover:bg-blue-900 text-neutral-50 rounded-full w-[48px] h-[48px] flex items-center justify-center",
    quinary: "bg-neutral-50 hover:bg-neutral-100 text-neutral-1000 rounded-full w-[48px] h-[48px] flex items-center justify-center",
};

const sizeClasses = {
    large: "text-[1.000rem]",
    medium: "text-[0.812rem]",
    small: "text-[0.625rem]",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>
